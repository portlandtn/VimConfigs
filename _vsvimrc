" === VsVim Config ===
set number
set relativenumber
set expandtab
set shiftwidth=4
set tabstop=4
set ignorecase
set smartcase
set incsearch
set hlsearch
set scrolloff=5
set visualbell
set vsvimcaret=100
set clipboard=unnamed
set backspace=indent,eol,start
set novsvim_useeditordefaults
set novsvim_useeditorindent

" === Set space as <Leader> and test it ===
let mapleader = " "
nnoremap <leader>h :echo "Leader key works!"<CR>

" === Confirm load ===
echo "âœ” _vsvimrc loaded"
